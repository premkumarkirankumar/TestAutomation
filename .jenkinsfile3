pipeline
{
agent any

stages
{
stage('Build')
{
steps
{
bat "mvn clean"
}

}
stage('deploy')
{
steps{
echo 'deploying the code'
}

}
stage('Unit Tests')
{
steps{
bat "mvn compile"
}

}

stage('Testing')
{
steps{
bat "mvn test"
}

}
stage('Release')
{
when{
branch "origin/master"
}
steps{
echo 'releasing the project'
bat "mvn clean test -Dsurefire.suiteXmlFiles=smoke.xml"
}

}



}

}